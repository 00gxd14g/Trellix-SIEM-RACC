# Environment Configuration for Trellix-Alarm-MNGT-WEB
# Copy this file to .env and modify the values as needed for your environment

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///database/app.db

# Upload Configuration
# Root directory for file uploads - defaults to ./uploads if not set
UPLOAD_ROOT=/path/to/secure/upload/directory

# Security Configuration
# Maximum file size for uploads (in bytes)
MAX_CONTENT_LENGTH=16777216

# CORS Configuration
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Default Alarm Generation Values
DEFAULT_ALARM_MIN_VERSION=11.6.14
DEFAULT_ASSIGNEE_ID=655372
DEFAULT_ESC_ASSIGNEE_ID=90118

# Logging Configuration
LOG_LEVEL=INFO

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SECRET_KEY=your-production-secret-key-with-high-entropy
# DATABASE_URL=postgresql://user:password@localhost/dbname
# UPLOAD_ROOT=/var/uploads/trellix-alarm-mgmt