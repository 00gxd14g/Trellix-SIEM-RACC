# Database Optimization Configuration
# Copy this file to .env and customize for your environment

# Flask Configuration
FLASK_CONFIG=development  # development, production, or testing
SECRET_KEY=change-this-to-a-random-secret-key
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///database/app.db

# Connection Pooling (more relevant for PostgreSQL/MySQL)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=True

# Redis Cache Configuration (optional)
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL (Time To Live in seconds)
CACHE_DEFAULT_TTL=300      # 5 minutes
CACHE_SETTINGS_TTL=600     # 10 minutes

# Query Performance Monitoring
QUERY_MONITOR_ENABLED=True
SLOW_QUERY_THRESHOLD=0.5   # Log queries slower than 0.5 seconds

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_ROOT=/home/alrisk/alrisk-main/Trellix-Alarm-MNGT-WEB/backend/uploads

# Backup Configuration
BACKUP_DIR=/home/alrisk/alrisk-main/Trellix-Alarm-MNGT-WEB/backend/backups
BACKUP_RETENTION_COUNT=10
AUTO_BACKUP_ENABLED=False

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Default Alarm Generation Values
DEFAULT_ALARM_MIN_VERSION=11.6.14
DEFAULT_ASSIGNEE_ID=655372
DEFAULT_ESC_ASSIGNEE_ID=90118

